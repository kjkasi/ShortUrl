@model Token
@{
    ViewData["Title"] = "Show Page";
}

<div class="text-center">
    <h1>URL Shortener</h1>
    <br />
    <p>You can see below the details of this short URL.</p>
    <br />
    <ul>
        <li>
            <span class="col-md-2">
                <strong>URL Id:</strong>
            </span>
            @Model.Id
        </li>
        <li>
            <span class="col-md-2">
                <strong>Original URL:</strong>
            </span>
            <a href="@Model.OriginalUrl">
                @Model.OriginalUrl
            </a>
        </li>
        <li>
            <span class="col-md-2">
                <strong>Short URL:</strong>
            </span>
            <a asp-controller="Redirect" asp-action="@Model.OriginalUrl" asp-route-path="">
                http://localhost:5001/Redirect/@Model.OriginalUrl"
            </a>
        </li>
    </ul>
</div>